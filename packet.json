{
    "host": "mate-scale-stage",
    "debug": 1,
    "gpio": [{
            "pin": 2,
            "name": "led",
            "mode": "output",
            "invert": 0,
            "default": 1
        },
        {
            "pin": 13,
            "name": "charging",
            "mode": "input",
            "invert": 0
        }
    ],
    "adc": [{
        "pin": 0,
        "name": "battery",
        "readings": 10,
        "offset": 0,
        "multi": 0.0047460937
    }],
    "hx711": [{
        "name": "weight",
        "pin_sck": 5,
        "pin_dt": 4,
        "gain": 64,
        "offset": 185000,
        "multi": 402.8,
        "readings": 1
        }],
    "ds18b20": [{
        "name": "temp",
        "pin": 14,
        "offset": 0,
        "multi": 1,
        "readings": 1
        }]
}
mosquitto_pub - t "device/mate-scale-stage/data" - q 1 - r - m '{
